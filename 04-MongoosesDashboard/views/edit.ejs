    <title>Mongooses Dashboard - My Pets</title>
<body>
    <h1>My Pet</h1>
    <form action="/pets/<%= mypet._id %>" method='post'>
        Pet Name: <input type="text" name="name" id="name" placeholder="<%= mypet.name %>">
        Pet Age: <input type="number" name="age" id="age" placeholder="<%= mypet.age %>">
        <input type="submit" value='Update my new pet'>
    </form>
    <br>
    <a href="/"><button>Return to main page</button></a>
</body>
